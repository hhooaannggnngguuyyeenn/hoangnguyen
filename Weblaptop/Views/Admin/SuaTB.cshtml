@model Weblaptop.Models.ThietBi

@{
    ViewBag.Title = "SuaTB";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SuaTB</h2>

@using (Html.BeginForm("SuaTB", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ThietBi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTB)

        <div class="form-group">
            @Html.LabelFor(model => model.MaTB, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding 5px 0 0 5px">@ViewBag.MaTB</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenTB, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaBan, htmlAttributes: new { @class = "control-label col-md-2" })
