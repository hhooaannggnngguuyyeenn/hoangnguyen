@model IEnumerable<Weblaptop.Models.ThuongHieu>
    @{
    ViewBag.Title = "adTH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    <h2>Thương hiệu mới ?</h2>
    <p>
        @Html.ActionLink("Thêm Thương Hiệu", "ThemmoiTH", "Admin")
    </p>
    <table class="table">
        <tr>
            <th>
                <h2>Tên Thương Hiệu</h2>
            </th>

            <th></th>

        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTH)
            </td>
            <td>
                @Html.ActionLink("Sửa", "SuaTH",new { id = item.MaTH }) |
                @Html.ActionLink("Xóa", "XoaTH", new { id = item.MaTH })
            </td>
        </tr>
        }

    </table>
