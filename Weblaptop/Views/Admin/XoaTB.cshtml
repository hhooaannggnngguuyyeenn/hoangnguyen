@model Weblaptop.Models.ThietBi

@{
    ViewBag.Title = "XoaTB";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h3>Bạn có muốn xóa thiết bị này ??</h3>
<div>
    <h4>ThietBi</h4>
    <hr />
    <div>
        <h4>ThietBi</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên Thiết Bị
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenTB)
            </dd>

            <dt>
                Giá bán
            </dt>

            <dd>
                @String.Format("{0:0,0}", Model.GiaBan) VNĐ
            </dd>

            <dt>
                Mô tả:
            </dt>

            <dd style="width:600px;text-align:justify">
                @Html.DisplayFor(model => model.Mota)
            </dd>

            <dt>
                Ảnh
            </dt>

            <dd>
                <img src="@Url.Content("~/Content/images/"+ Model.Anh )" style="width:100px" />
            </dd>

            <dt>
                Ngày Cập Nhật
            </dt>

            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
            </dd>

            <dt>
                Số lượng tồn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoluongTon)
            </dd>

            <dt>
                Mã Thương Hiệu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaTH)
            </dd>

        </dl>
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <dt> @Html.ActionLink("Trở về trang Thiết Bị", "TB")</dt> 
        <dt><input type="submit" value="Delete" class="btn btn-default" /> </dt>

    </div>
    }
</div>
